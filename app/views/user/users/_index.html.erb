<div class="row">
  <% posts.each do |post| %>
    <div class="col-md-4">
      <a href="/posts/<%= post.id %>" class="card-body text-dark">
      <div class="card">

        <%= image_tag post.get_image, class: 'img-fluid card-img-top user-show-card-img' %>
        <div class="card-body">
          <h6 class="card-title font-weight-bold mb-3">
            <%= post.title %>
          </h6>
          <div class="card-text">
            <%= image_tag post.user.get_profile_image(50,50), class: 'rounded-circle' %>
            <%= post.user.user_name %>
            <div class="my-3"><%= post.playground %></div>
            <div class="mb-3">
              <%= post.genre.name %> | <%= post.area.name %>
            </div>
          </div>
          <div id="rate_<%= post.id %>"></div>
        </div>
        <div class="card-footer text-right">
          <small class="text-black-50">
            <%= post.created_at.strftime('%Y/%m/%d') %>
          </small>
        </div>
      </div><!-- card end -->
      </a>
    </div>
    <script>
      document.getElementById('rate_<%= post.id %>').innerHTML = '';
      raty(document.getElementById('rate_<%= post.id %>'), {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        readOnly: true,
        score: 4.5
      })
    </script>
  <% end %>
</div>