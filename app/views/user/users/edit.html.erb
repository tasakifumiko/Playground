<h2>プロフィール編集</h2>
<%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :full_name %><br>
    <%= f.text_field :full_name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name, autofocus: true, autocomplete: "name" %>
  </div>
  
  <div class="field">
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/jpg, image/png" %>
  </div>
  
  <div class="actions">
  <%= f.submit "変更を保存" %>
  </div>
<% end %>