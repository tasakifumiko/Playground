<div class="cover-new">
  <div class="container">
    <div class="row justify-content-center">
      <h4 class="font-weight-normal mt-3">投稿内容編集中•••</h4>
    </div>

        <div class="row justify-content-center">
          <%= form_with model: @post, method: :patch do |f| %>

          <div class="form-group">
            <%= f.label :title, '遊び場名', class:'col-md-5 col-form-label' %>
              <%= f.text_field :playground, class: "form-control"  %>
          </div>

          <div class="form-group">
            <%= f.label :title, 'タイトル', class:'col-md-5 col-form-label' %>
            <%= f.text_field :title, class: "form-control"  %>
          </div>

          <div class="form-group row">
            <%= f.label :area_id, 'エリア', class: 'col-md-5 col-form-label' %>
             <div class="col-md-7">
              <%= f.collection_select :area_id, Area.all, :id, :name, { include_blank: "地域を選択" }, { class: "form-control" } %>
              </div>
          </div>

          <div class="form-group row">
            <%= f.label :genre_id, 'ジャンル', class: 'col-md-5 col-form-label' %>
              <div class="col-md-7">
                <%= f.collection_select :genre_id, Genre.all, :id, :name, { include_blank: "ジャンルを選択" }, { class: "form-control" } %>
              </div>
          </div>

          <div class="form-group row">
            <%= f.label :title, '評価', class: 'col-md-5 col-form-label' %>
              <div class="col-md-7" id="score"></div>
          </div>

    <%#= @post.inspect %>
             <!-- 評価のjavascript -->
          <!--<script>-->
          <!--  document.getElementById("score").innerHTML = '';-->
          <!--  raty(document.getElementById("score"), {-->
          <!--    starOn: "<%#= asset_path('star-on.png') %>",-->
          <!--    starOff: "<%#= asset_path('star-off.png') %>",-->
          <!--    starHalf: "<%#= asset_path('star-half.png') %>",-->
          <!--    scoreName: 'review[score]',-->
          <!--    score: "#{post.reviews.average(:score).to_f.round(1)}",-->
          <!--  })-->
          <!--</script>-->

          <div class="form-group row">
            <%= f.label :image, '写真', class: 'col-md-4 col-form-label' %>
              <div class="col-md-6">
                <%= f.file_field :image, accept: "image/*" %>
              </div>
          </div>
          
          <% if @post.images.attached? %>
            <div class= "photos">
              <% @post.images.each do |image| %>
                  <div class="photo">
                    <%= image_tag image.variant(resize_to_limit: [100, 100]), class: "img-fluid" %>
                  </div>
              <% end %>
            </div>
          <% end %>

          <div class="form-group row">
            <%= f.label :text, 'コメント', class: 'col-md-4 col-form-label' %>
            <%= f.text_area :text, rows: 10, class: "form-control" %>
        　</div>

          <div class="form-group row">
              <div class="col-md-6 offset-md-4">
                <%= f.submit '投稿する', class: "btn btn-success" %>
              </div>
          </div>
        </div>
          <% end %>
