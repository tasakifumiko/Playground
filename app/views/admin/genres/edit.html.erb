<div class="mt-4">
  <div class="col-md-8">

    <h4><span class="bg-light">ジャンル情報編集<span></h4>
    <div class="mt-4">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch, local:true do |f| %>
        <div class="form-group">
            <%= f.label :name, "ジャンル名" %>
            <%= f.text_field :name  %>
            <%= f.submit '変更を保存', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>